package oo.desafio;

import java.util.ArrayList;
import java.util.List;

public class Compras {

	List<Item> itens = new ArrayList<>();
	
	void adicionarItem(Item item) {
		this.itens.add(item);
	}
	
	boolean obterValorTotal() {
		double total = 0;
		
		for(Item item: itens) {
			total += item.quantidade * item.produto.preco;
		}
		
		return total;
	}
		
}
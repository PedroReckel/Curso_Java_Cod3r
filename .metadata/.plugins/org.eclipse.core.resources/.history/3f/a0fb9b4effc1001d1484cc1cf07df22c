package oo.encapsulamento;

public class Pessoa {

	private int idade;
	
	public Pessoa(int idade) {
		alterarIdade(idade);
	}
		
	public int lerIdade() {
		return idade;
	}
	
	public void alterarIdade(int novaIdade) {
		novaIdade = Math.abs(novaIdade);
		if(novaIdade >= 0) {
			this.idade = novaIdade;
		}
	}
	
}
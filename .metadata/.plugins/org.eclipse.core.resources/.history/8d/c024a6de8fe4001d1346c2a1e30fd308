package lambdas;

import java.util.function.BinaryOperator;
import java.util.function.Function;

public class Desafio {

	/*
	 * 1. A partir do produto calcular o preco real (com desconto)
	 * 2. Imposto municipal: >= 2500 (8,5%)/ < 2500 (Isento)
	 * 3. Frete: >= 3000 (100)/ < 3000 (50)
	 * 4. Arrendondar: Deixar duas casas decimais
	 * 5. Formatar: R$1234,56
	 * */
	
	public static void main(String[] args) {
		
		Produto p = new Produto("Ipad", 3235.89, 0.13);
		
		BinaryOperator<Double> precoComDesconto = (x, y) -> x * (1 - y);
		System.out.println(precoComDesconto.apply(p.preco, p.desconto));
		
		Function<Double, Double> precoComImposto = x -> (x >= 2500) ? x = (x * 8.5) / 100 : x;
		System.out.println(precoComImposto.apply(3235.89));
		
		System.out.println(precoComDesconto.andThen(precoComImposto).apply(p.preco, p.desconto));
		System.out.println(p.preco);
		
	}
	
}
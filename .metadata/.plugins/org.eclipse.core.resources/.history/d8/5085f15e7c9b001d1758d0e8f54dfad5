package classe;

public class DesafioProduto {
	
	String nome;
	double preco;
	 double desconto = 0.25;
	
	DesafioProduto () {
		
	}
	
	DesafioProduto(String nomeInicial, double precoInicial, double descontoInicial) {
		nome = nomeInicial;
		preco = precoInicial;
		desconto = descontoInicial;
	}
	
	double precoComDesconto() {
		return preco * (1 - desconto);
	}
	
}

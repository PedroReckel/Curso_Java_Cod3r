package oo.heranca;

public class Jogador {

	int vida = 100;
	int x;
	int y;
	
	boolean atacar(Jogador oponente) {
		
	}
	
	boolean andar(Direcao direcao) {
		switch(direcao) {
		case NORTE:
			y--;
			break;
		case LESTE:
			x++;
			break;
		case SUL:
			y++;
			break;
		case OESTE:
			x--;
			break;
		}
		return true;
	}
	
}
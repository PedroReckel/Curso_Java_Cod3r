package oo.heranca.desafio01;

public class Carro {

	double velocidadeAtual = 0;
	
	boolean acelerar(double velocidade) {
		this.velocidadeAtual += 15;
		return true;
	}
	
	boolean frear(double forca) {
		if (this.velocidadeAtual <= 5) {
			this.velocidadeAtual = 0;
			return false;
		} else {
			this.velocidadeAtual -= forca;
			return true;
		}
	}
 	
}
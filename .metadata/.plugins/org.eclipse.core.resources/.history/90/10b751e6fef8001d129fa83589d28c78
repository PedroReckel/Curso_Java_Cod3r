package streamAPI;

import java.util.Arrays;
import java.util.List;
import java.util.function.Function;
import java.util.function.Predicate;

public class DesafioFilter {

	public static void main(String[] args) {
		
		Carro c1 = new Carro("Lancer evo", 200000, 210);
		Carro c2 = new Carro("Toyota Supra", 1000000, 200);
		Carro c3 = new Carro("Civic SI", 70000, 230);
		Carro c4 = new Carro("Corsa Wind", 7000, 400);
		Carro c5 = new Carro("Fiat Uno", 7500, 410);
		Carro c6 = new Carro("Chevette", 15000, 280);
		
		List<Carro> carros = Arrays.asList(c1, c2, c3, c4, c5, c6);
		
		Predicate<Carro> barato = c -> c.preco >= 80000;
		Function<Carro, String> bomPreco = a -> "Esse carro tem um bom preço de " + " R$" + a.preco + ",00";
		
	}
	
}


package oo.heranca.desafio01;

public class Ferrari extends Carro implements Esportivo, Luxo {
	
	private boolean ligarTurbo;
	private boolean ligarAr;
	
	public Ferrari() {
		super(300);
		delta = 50;
	}
	
//	@Override
//	void acelerar() {
//		velocidadeAtual += 50;
//	}
//	
	@Override
	public void frear() {
		if (velocidadeAtual >= 35) {
			velocidadeAtual -= 35;
		} else {
			velocidadeAtual = 0;
		}
	}

	@Override
	public void ligarTurbo() {
		ligarTurbo = true;
	}
	
	@Override
	public void desligarTurbo() {
		ligarTurbo = false;
	}

	@Override
	public void ligarAr() {
		ligarAr = true;
		
	}

	@Override
	public void desligarAr() {
		ligarAr = false;
		
	}
	
}